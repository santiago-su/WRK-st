<h1>Ingresos y Egresos</h1>

<%= button_to "Ingreso", new_admin_transaction_path, method: :get, class: "btn btn-primary" %>
<%= button_to "Egreso", new_admin_transaction_path, method: :get, class: "btn btn-primary" %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Monto</th>
      <th>Comentario</th>
      <th>Fecha</th>
      <th>Ingreso</th>
      <th>Egreso</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.commentary %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.ingreso(transaction) %></td>
        <td><%= transaction.egreso(transaction) %></td>
        <td></td>
        <td><%= link_to "Editar", edit_admin_transaction_path(transaction) %></td>
        <td><%= link_to "Borrar", admin_transaction_path(transaction), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
