<h2>Cambiar contrase単a de <%= resource_name.to_s %></h2>

<%= form_for(resource, :as => resource_name, :url => admin_registration_path(resource_name), :html => { class: "form-horizontal", :method => :patch }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :current_password, "Contrase単a actual", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :current_password, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :password, "Nueva Contrase単a", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contrase単a", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-2">
      <%= f.submit "Actualizar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
