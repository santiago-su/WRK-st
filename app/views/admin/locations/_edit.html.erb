<%= form_for([:admin, @location], html: {role: :form, 'data-model' => 'transaction'}) do |f| %>

<% if f.object.errors.any? %>
<div id="error_explanation">
  <% f.object.errors.full_messages %>
  <div class="alert alert-danger">
    <p class="alert-link">Los campos no pueden estar vac√≠os</p>
  </div>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name, class: 'control-label' %><br>
  <%= f.text_field :name, class: 'form-control' %>
  <span class="help-block"></span>
</div>

<div class="form-group">
  <%= f.label :description, class: 'control-label' %><br>
  <%= f.text_field :description, class: 'form-control' %>
  <span class="help-block"></span>
</div>

<div class="actions">
  <button type="submit" class="btn btn-default">
    <span class="glyphicon glyphicon-ok"></span> Guardar
</div>
<% end %>
