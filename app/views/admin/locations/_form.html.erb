<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for([:admin, @location], remote: true, html: {role: :form, 'data-model' => 'location'}) do |f| %>

  <% if f.object.errors.any? %>
  <div id="error_explanation">
    <% f.object.errors.full_messages %>
    <div class="alert alert-danger">
      <p class="alert-link">Debe tener nombre y descripciÃ³n</p>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'control-label' %><br>
    <%= f.text_field :description, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-default" id="modal_ok">
      <span class="glyphicon glyphicon-ok"></span> Guardar
  </div>

<% end %>
