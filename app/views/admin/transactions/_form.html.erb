<%= form_for([:admin, transaction], remote: true, html: {role: :form, 'data-model' => 'transaction'}, namespace: "transaction_#{transaction.id}") do |f| %>

<div class="row">
  <div class="form-group col-xs-5">
    <label>&nbsp;</label>
    <div>
      <%= f.label :type_of_transaction_1, class: "radio-inline" do %>
        <%= f.radio_button(:type_of_transaction, value=1) %> Ingreso
      <% end %>
      <%= f.label :type_of_transaction_2, class: "radio-inline" do %>
        <%= f.radio_button(:type_of_transaction, value=2, class: "radio-inline",
              data: { 'bv-notempty' => true, 'bv-notempty-message' => 'Necesita seleccionar uno' }) %>
        Egreso
      <% end %>
    </div>
  </div>
  <div class="form-group col-xs-3">
    <%= f.label :amount, "Monto", class: "control-label" %>
    <%= f.text_field :amount, class: "form-control",
      data: {
        'bv-notempty' => true,
        'bv-notempty-message' => 'No puede estar vacío',
        'bv-numeric' => true,
        'bv-numeric-separator' => '.',
        'bv-numeric-message' => 'Introduce una cantidad válida, utiliza el punto para separar decimales (e.j. 1234.50)'
    } %>
  </div>

  <div class="form-group col-xs-4">
    <%= f.label :date, "Fecha", class: "control-label" %>
    <%= f.date_field :date, value: transaction.date, class: "form-control",
        data: { 'bv-notempty' => true, 'bv-notempty-message' => 'No puede estar vacío' } %>
  </div>
</div>


<div class="form-group">
  <%= f.label :concept, "Concepto", class: "control-label" %>
  <%= f.text_field :concept, class: "form-control",
      data: { 'bv-notempty' => true, 'bv-notempty-message' => 'No puede estar vacío' } %>
</div>

<div class="form-group">
  <%= f.label :notes, "Notas", class: "control-label" %>
  <%= f.text_area :notes, class: "form-control"  %>
</div>


<div class="form-group">
  <div class="col-sm-offset-10 col-sm-0">
    <button type="submit" class="btn btn-default" id="modal_transaction">
      <span class="glyphicon glyphicon-ok"></span> Guardar
    </button>
  </div>
</div>
<% end %>
