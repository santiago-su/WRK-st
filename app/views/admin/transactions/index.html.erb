<h1>Ingresos y Egresos
  <button type="button" onclick = "this.style.visibility='hidden', loading.style.visibility='visible'"
  class="btn btn-primary" data-toggle="collapse" data-target="#demo">
    Nuevo movimiento
  </button>
</h1>

<div id="demo" class="collapse well">
  <%= render partial: "form", locals: { admin: @transaction }%>
</div>

<h2>Movimientos</h2>
<p>Mi saldo es <%= number_to_currency(@transaction.balance) %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Concepto</th>
      <th>Comentario</th>
      <th>Fecha</th>
      <th>Cantidad</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.concept %></td>
        <td><%= transaction.commentary %></td>
        <td><%= transaction.date %></td>
        <% if transaction.type_of_transaction == "1" %>
          <td><%= number_to_currency(transaction.amount) %></td>
        <% else %>
          <td>-<%= number_to_currency(transaction.amount) %></td>
        <% end %>
        <td><%= link_to "Editar", edit_admin_transaction_path(transaction) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
