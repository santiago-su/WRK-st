$('#edit_service_modal_<%= @service.id %>').modal('hide');
$('#edit_service_modal_<%= @service.id %>').on("hidden.bs.modal", function () {
  $('tr#service_<%= @service.id %>').
    after("<%= j (render partial: 'table_row', locals: {service: @service }) %>").
    remove();
  sortTable("#service_table", "name");
  setTimeout(function () {
    $('#service_<%= @service.id %>_edit_service_<%= @service.id %>').bootstrapValidator();
  }, 1);
});

displayAlert("El servicio ha sido actualizado");
