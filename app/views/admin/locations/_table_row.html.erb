<tr>
  <td><%= location.name %></td>
  <td><%= location.description %></td>
  <td><%= link_to edit_admin_location_path(location), class: "btn btn-default btn-xs" do %>
    <span class="glyphicon glyphicon-pencil"></span>  Editar
  <% end %>
  </td>
  <td><%= link_to admin_location_path(location), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } do %>
    <span class="glyphicon glyphicon-trash"></span> Eliminar
  <% end %>
  </td>
</tr>
