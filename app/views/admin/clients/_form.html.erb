<%= form_for([:admin, @client], remote: true, html: {role: :form, 'data-model' => 'client'}) do |f| %>

<div class="form-group">
  <%= f.label :name, "Nombre" %>
  <%= f.text_field :name, class: "form-control",
      data: { 'bv-notempty' => true, 'bv-notempty-message' => 'No puede estar vacío' } %>
</div>

<div class="form-group">
  <%= f.label :responsible, "Responsable" %>
  <%= f.text_field :responsible, class: "form-control" %>
</div>

<div class="row">
  <div class="form-group col-xs-6">
    <%= f.label :email, "Correo electrónico" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group col-xs-6">
    <%= f.label :phone, "Teléfono" %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, "Descripción" %>
  <%= f.text_area :description, class: "form-control" %>
</div>


<div class="row">
  <div class="form-group col-xs-6">
    <%= f.label :meeting_office_hours, "Horas sala de juntas" %>
    <%= f.number_field :meeting_office_hours, class: "form-control", min: 0,
        data: { 'bv-notempty' => true, 'bv-notempty-message' => 'No puede estar vacío' } %>
  </div>

  <div class="form-group col-xs-6">
    <%= f.label :entry_date, "Fecha de ingreso" %>
    <%= f.date_field :entry_date, value: Time.now.strftime('%Y-%m-%d'), class: "form-control",
        data: { 'bv-notempty' => true, 'bv-notempty-message' => 'No puede estar vacío' } %>
  </div>
</div>


  <div class="actions">
    <button type="submit" class="btn btn-default" id="modal_win">
      <span class="glyphicon glyphicon-ok"></span> Guardar
    </button>
  </div>
<% end %>
