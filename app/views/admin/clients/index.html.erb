<h1>Clientes
<%= link_to '#new_client_modal', 'data-toggle' => 'modal', class: "btn btn-primary" do %>
  <span class="glyphicon glyphicon-plus"></span> Nuevo Cliente
<% end %>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cliente</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="clients_table">
    <% @clients.each do |client| %>
      <%= render partial: 'row', locals: { client: client } %>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="new_client_modal" tabindex="-1" role="dialog"
 aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Nuevo cliente</h4>
      </div>
      <div class="modal-body">
        <%= render partial: 'form', locals: { client: @client } %>
      </div>
    </div>
  </div>
</div>
