<h2>Movimientos
  <button type="button" onclick = "this.style.visibility='hidden'"
  class="btn btn-primary" data-toggle="collapse" data-target="#demo">
    <span class="glyphicon glyphicon-plus"></span>  Nuevo movimiento
  </button>
</h2>

<div id="demo" class="collapse well">
  <%= render partial: "form", locals: { admin: @transaction }%>
</div>

<table class="table table-hover" id="transaction_table">
  <thead>
    <tr>
      <th>Concepto</th>
      <th>Comentario</th>
      <th>Fecha</th>
      <th>Cantidad</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <%= render partial: 'row', locals: { transaction: transaction } %>
      </tr>
    <% end %>
  </tbody>
</table>
